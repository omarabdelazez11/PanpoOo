#include <stdio.h>
#include <stdlib.h>
int main()
{
    FILE *test;
    test= fopen("test.txt","w");

    printf("**************************************************************************************************************\n");
    printf("*************************************Welcome To Panpo company*************************************************\n");
    printf("**************************************************************************************************************\n");
    printf("Enter Your First name :");
    char fname[200];
    scanf("%s",&fname);
    printf("Enter Your Second name :");
    char sname[200];
    scanf("%s",&sname);
    char password[200];
    char password1[200];
    int attempts = 0;

   do {
        if (attempts > 0) {
            printf("Passwords do not match. Please try again.\n");
        }

        if (attempts >= 2) {
            printf("You have exceeded the maximum number of attempts.\n");
            fclose(test);
            return printf( "Registration failed");
        }

        printf("Enter Your Password: ");
        scanf("%s", password);

        printf("Confirm Your Password: ");
        scanf("%s", password1);

        attempts++;
    } while (strcmp(password, password1) != 0);

    printf("Registration accepted\n");

    fclose(test);


}
